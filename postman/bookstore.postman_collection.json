{
  "info": {
    "name": "WSD Bookstore API",
    "_postman_id": "0f6871c5-0bcd-43c8-8b52-cf92781a7716",
    "description": "Assignment 2 Postman collection with automated token handling.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:5000" },
    { "key": "admin_email", "value": "admin@example.com" },
    { "key": "admin_password", "value": "Admin123!" },
    { "key": "access_token", "value": "" },
    { "key": "refresh_token", "value": "" },
    { "key": "last_book_id", "value": "" },
    { "key": "category_id", "value": "1" },
    { "key": "author_id", "value": "1" }
  ],
  "item": [
    {
      "name": "Auth - Login (Admin)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{admin_email}}\",\n  \"password\": \"{{admin_password}}\"\n}"
        },
        "url": { "raw": "{{base_url}}/auth/login", "host": ["{{base_url}}"], "path": ["auth", "login"] }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"status is 200\", function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "var json = pm.response.json();",
              "pm.collectionVariables.set(\"access_token\", json.access_token);",
              "pm.collectionVariables.set(\"refresh_token\", json.refresh_token);",
              "pm.test(\"tokens exist\", function () {",
              "  pm.expect(json).to.have.property(\"access_token\");",
              "  pm.expect(json).to.have.property(\"refresh_token\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Books - List (Public)",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "const token = pm.collectionVariables.get(\"access_token\");",
              "if (token) {",
              "  pm.request.headers.upsert({",
              "    key: \"Authorization\",",
              "    value: \"Bearer \" + token",
              "  });",
              "}"
            ],
            "type": "text/javascript"
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"status 200\", function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "var payload = pm.response.json();",
              "pm.test(\"content is array\", function () {",
              "  pm.expect(payload.content).to.be.an(\"array\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/books?size=5",
          "host": ["{{base_url}}"],
          "path": ["books"],
          "query": [
            { "key": "size", "value": "5" }
          ]
        }
      }
    },
    {
      "name": "Books - Create (Admin)",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "const token = pm.collectionVariables.get(\"access_token\");",
              "pm.request.headers.upsert({",
              "  key: \"Authorization\",",
              "  value: \"Bearer \" + token",
              "});",
              "pm.request.headers.upsert({ key: \"Content-Type\", value: \"application/json\" });"
            ],
            "type": "text/javascript"
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"created\", function () {",
              "  pm.response.to.have.status(201);",
              "});",
              "var book = pm.response.json();",
              "pm.collectionVariables.set(\"last_book_id\", book.id);",
              "pm.test(\"book has id\", function () {",
              "  pm.expect(book).to.have.property(\"id\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"API Generated Book\",\n  \"price\": 12000,\n  \"category_id\": {{category_id}},\n  \"author_id\": {{author_id}},\n  \"stock_cnt\": 5,\n  \"status\": \"ACTIVE\"\n}"
        },
        "url": { "raw": "{{base_url}}/books", "host": ["{{base_url}}"], "path": ["books"] }
      }
    },
    {
      "name": "Orders - List (Self)",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "const token = pm.collectionVariables.get(\"access_token\");",
              "pm.request.headers.upsert({",
              "  key: \"Authorization\",",
              "  value: \"Bearer \" + token",
              "});"
            ],
            "type": "text/javascript"
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"orders loaded\", function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "var payload = pm.response.json();",
              "pm.test(\"has pagination\", function () {",
              "  pm.expect(payload).to.have.property(\"content\");",
              "  pm.expect(payload).to.have.property(\"totalElements\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "url": { "raw": "{{base_url}}/orders", "host": ["{{base_url}}"], "path": ["orders"] }
      }
    }
  ]
}
